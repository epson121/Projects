<!DOCTYPE>
<html>
	<%= render "/layouts/head" %>

	<style type="text/css">
		body {
			background-color:#A60000;
			opacity: 0.9;
		}
		.form {
			word-wrap:break-word;
			font-size: 1.5em;
			font-family: Monospace;
			background: #F6F6ED;
			padding: 1.5em;
			color:black;
			text-align: center;
			padding-left: 0px;
		}
		.num {
			color: #000000;
			line-height:120%;
		}
		.antiform{
			text-align: left;
		}
	</style>
	</head>
	<body >
		<div class="navbar">
	  		<div class="navbar-inner">
	  			<%= link_to "Fixed mortgage calculator", "/", class: "brand" %>
		  	</div>
		</div>
		<div class="row">
		  	<div class="span10 offset2">
		  		<h3 class="form" style="font-size:3em;padding:1em;font-family:Monospace;">Fixed mortgage calculator</h3>
		  		<div class="row">
		  			<div class="span5">
		  				<div class = "form" >
		  					<div class="antiform">
						  	<%= form_tag("index", method: "get", class:"form-horizontal") do %>
						  		<div class="control-group">
						  			<%= label_tag "inputLoan", "Loan size",  class: "control-label" %>
						  			<div class="controls">
						  				<%= text_field_tag 'inputLoan', @loan, placeholder: "Enter loan size.." %>		
						  			</div>
						  		</div>
						  		<div class="control-group">
						  			<%= label_tag "inputDuration", "Duration (years)",  class: "control-label" %>
						  			<div class="controls">
						  				<%= text_field_tag 'inputDuration', @duration, placeholder: "Enter duration (years).." %>		
						  			</div>
						  		</div>
						  		<div class="control-group">
						  			<%= label_tag "inputRate", "Interest rate (yearly)",  class: "control-label" %>
						  			<div class="controls">
						  				<%= text_field_tag 'inputRate', @rate, placeholder: "Enter the interest rate" %>		
						  			</div>
						  		</div>
						  		<div class="control-group">
						  			<div class="controls">
						  				<%= submit_tag "Calculate", class: "btn" %>		
						  			</div>
						  		</div>
								<% end %>
								</div>
							</div>
	  				</div>
	  				<div class="span5">
	  					<div class="form">
	  						Results
	  						<form class="form-horizontal" style="margin-top:0.5em;">
		  						<div class="control-group">
						  			<%= label_tag "payment", "Monthly payment:",  class: "control-label" %>
						  			<div class="controls">
						  				<%= text_field_tag 'payment', @value , disabled: "true" %>		
						  			</div>
						  		</div>
					  		</div>
	  					</div>
 					</div>
		  		</div>
			</div>
		</div>
			
		</div>
	</body>
</html>