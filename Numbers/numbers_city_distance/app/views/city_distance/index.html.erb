<!DOCTYPE>
<html>
	<%= render "/layouts/head" %>
	<body >

		<div class="navbar navbar-inverse">
			<div class="navbar-inner">
				<%= link_to "City Distance", "/", class: "brand" %>
			</div>
		</div>

		<div class="row">
		<div class="span6 offset4">
			<div class="page-header">
				<h1>City Distance     <small>from here to there ( via air )</small></h1>
			</div>
			<div class="form">
				<%= form_tag("index", method: "POST", remote: true, id: "form", class:"form-horizontal") do %>
					<%= text_field_tag "pl", nil, placeholder: "City, place, etc.", class: "input span3" %>
					<%= text_field_tag "pr", nil, placeholder: "City, place, etc.", class: "input span3" %>
					<br/><br/>
					<%= submit_tag "Get distance", class:"btn btn-warning span2", id:"submit" %>
				<% end %>
			</div>
			<div id = "distance_text" class="form" >
			</div>
			<div id = "distance" class="form">
			</div>
		</div>          
							
	</body>
</html>