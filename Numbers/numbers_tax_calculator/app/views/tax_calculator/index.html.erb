<!DOCTYPE>
<html>
	<%= render "/layouts/head" %>
	<body >

		<div class="navbar navbar-inverse">
			<div class="navbar-inner">
				<%= link_to "Tax calculator", "/", class: "brand" %>
			</div>
		</div>

		<div class="row">
		<div class="span6 offset4">
			<div class="page-header">
				<h2>Tax calculator &nbsp;&nbsp;&nbsp;<small>Government wants its share!!</small></h2>
			</div>
			<div class="form">
				<%= form_tag("index", method: "POST", remote: true, id: "form", class:"form-horizontal") do %>
					<%= text_field_tag "price", nil, placeholder: "Enter the price", class: "input span3" %>
					<%= text_field_tag "tax", nil, placeholder: "Enter the tax percentage", class: "input span3" %>
					<br/><br/>
					<%= submit_tag "Calculate it for me, oh mighty one!", class:"btn btn-warning span4", id:"submit" %>
				<% end %>
			</div>
			<div id = "results" class="form" >
			</div>
		</div>          
							
	</body>
</html>