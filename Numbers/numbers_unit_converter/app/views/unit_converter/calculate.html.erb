<!DOCTYPE>
<html>
	<%= render "/layouts/head" %>
	<body >

		<div class="navbar navbar-inverse">
	  		<div class="navbar-inner">
	  			<%= link_to "Unit converter", "/", class: "brand" %>
		  	</div>
		</div>

		<div class="row">
		  	<div class="span6 offset4">
	  			<div class="page-header">
				  <h1>Unit converter  <small>Convert yourself</small></h1>
				</div>
				<div class="top" >
					<%= form_tag("calculate", method: "POST", id: "form", class:"form-horizontal") do %>
					<%= select_tag "unit",  options_for_select(@units, @unitSelected), class: "select" %>
				</div>
				<div id = "bla" class="row">
					<div class="span3 bot">
						<div id="left_select">
							<%= select_tag "left",  options_for_select(@left, @leftSelected), class: "select" %>
						</div>
						<div id="left_text">
							<%= text_field_tag 'inputLeft', @inputLeft, class: "input" %>
						</div>
					</div>
					<div class="span3 bot" >
						<div id="right_select">
							<%= select_tag "right",  options_for_select(@right, @rightSelected), class: "select" %>
						</div>
						<div id="right_text">
							<%= text_field_tag 'inputRight', @inputRight, class: "input" %>
						</div>
					</div>
				</div>
  			</div>
		</div>		  		
		<div class="row">
			<div class="span1 offset6">
				<%= submit_tag "Calculate", class: "btn btn-inverse btn-large" %>
				<% end %>
			</div>
		</div>
	</body>
</html>